<!-- res/drawable/rounded_left_right.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E4E3E3" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp" />
        </shape>
    </item>

    <!-- Background shape (rounded rectangle) -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color (white) -->
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"/><!-- Corner radius (adjust as needed) -->
        </shape>
    </item>
</layer-list>
